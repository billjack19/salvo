var tour,endTour;
$(document).ready(function() {
    tour = new Tour({
      onEnd: function() {
        endTour.restart();
      },
      steps: [
      {
        placement: 'right',
        element: '#botao-adicionar',
        title: 'Adicionar NFC-e',
        content: 'Neste botão poderá cadastrar uma nova NFC-e.',
        backdrop: true,
      },
      {
        placement: 'right',
        element: '#botao-acoes-massa',
        title: 'Mais ações',
        content: "Neste botão poderá realizar mais ações como Importar XML, Exportar XML, Inutilizar Numerações, Exportar em excel e Vincular certificado digital.",
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.botao-busca-avancada',
        title: 'Busca avançada',
        content: 'Aqui você encontra funções mais avançadas para filtrar suas notas fiscais.',
        backdrop: true,
        onShown: function(tour) {
          var stepElement = getTourElement(tour);
          $(stepElement).after($('.tour-step-background'));
          $(stepElement).after($('.tour-backdrop'));
        },
        onNext: function() {
            if(!$('.index .btn-info:first').length){
                assistirVideoTutorial();
            }
        },
      },
      {
        placement: 'top',
        element: '.index tbody tr:first',
        title: 'Resumo da NFC-e',
        content: 'Aqui você visualiza um resumo da NFC-e.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.index .btn-info:first',
        title: 'Visualizar NFC-e',
        content: 'Neste botão poderá visualizar os detalhes da NFC-e.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.index .btn-warning:first',
        title: 'Editar NFC-e',
        content: 'Neste botão poderá atualizar os dados da NFC-e.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.index .btn-danger:first',
        title: 'Deletar NFC-e',
        content: 'Neste botão poderá excluir a NFC-e.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.index .btn-success:first',
        title: 'Mais ações',
        content: 'Neste botão poderá realizar mais ações como Enviar a NFC-e para receita, imprimir a DANFE, Enviar NFC-e por e-mail e Cancelar NFC-e.',
        backdrop: true,
        onNext: function() {
            if($('.index .btn-info:first').length){
                if(exibirVideo){
                    assistirVideoTutorial();
                }else{
                    tour.end();
                    endTour.restart();
                    exibirVideo = true;
                }
            }
        },
      },
      {

      }
    ]});

    endTour = new Tour({
      steps: [
      {
        placement: 'left',
        element: '#start-tour',
        title: 'Passo-a-passo',
        content: 'Sempre que quiser ver este passo-a-passo, clique neste botão.',
        backdrop: true,
        onNext: function() {
          endTour.end();
        },
      },
      {

      }
    ]});

    $('.start-tour').click(function(){
        tour.restart();
    });

    $('.end-tour').click(function(){
        endTour.restart();
    });
});

function getTourElement(tour){
   return tour._options.steps[tour._current].element
}