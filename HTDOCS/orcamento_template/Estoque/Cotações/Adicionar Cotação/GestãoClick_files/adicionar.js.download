var tour,endTour;
$(document).ready(function() {
    var tour = new Tour({
      onEnd: function() {
        endTour.restart();
      },
      steps: [
      {
        placement: 'bottom',
        element: '#CotacaoData',
        title: 'Data',
        content: 'Utilize este campo para indicar a data da cotação.',
        backdrop: true,
      },
      {
        placement: 'bottom',
        element: '#CotacaoPrazoRecebimento',
        title: 'Prazo de recebimento',
        content: 'Utilize este campo para indicar o prazo do recebimento.',
        backdrop: true,
      },
      {
        placement: 'bottom',
        element: '.token-input-list:first',
        title: 'Fornecedor',
        content: 'Utilize este campo para indicar o fornecedor.',
        backdrop: true,
      },
      {
        placement: 'bottom',
        element: '.email:first',
        title: 'E-mail',
        content: 'Utilize este campo para indicar o e-mail do fornecedor. <br><b>Obs.:</b> Este e-mail será usado para o envio da cotação.',
        backdrop: true,
      },
      {
        placement: 'bottom',
        element: '.carregar-produtos:first',
        title: 'Carregar produtos',
        content: 'Utilize este botão para carregar os produtos que estão vinculados ao fornecedor selecionado.',
        backdrop: true,
      },
      {
        placement: 'bottom',
        element: '#adicionar-fornecedor',
        title: 'Adicionar fornecedor',
        content: 'Para adicionar mais fornecedores, clique neste botão.',
        backdrop: true,
      },
      {
        placement: 'bottom',
        element: '#produtos table',
        title: 'Produtos',
        content: 'Utilize este espaço para vincular os produtos já cadastrados no sistema.',
        backdrop: true,
      },
      {
        placement: 'bottom',
        element: '#adicionar-produto  ',
        title: 'Adicionar produtos',
        content: 'Para adicionar mais produtos clique neste botão.',
        backdrop: true,
      },
      {
        placement: 'top',
        element: '#salvar',
        title: 'Cadastrar',
        content: 'Para finalizar o cadastro basta clicar no botão <b>Cadastrar</b>. <br> <b>Obs.:</b> Após ter salvo a cotação é necessário que você envia a cotação para o(s) fornecedor(es) clicando no botão de envio.',
        backdrop: true,
        onShown: function(tour) {
          var stepElement = getTourElement(tour);
          $(stepElement).after($('.tour-step-background'));
          $(stepElement).after($('.tour-backdrop'));
        },
        onNext: function() {
          tour.end();
          endTour.restart();
        },
      },
      {

      }
    ]});

    var endTour = new Tour({
      steps: [
      {
        placement: 'left',
        element: '#start-tour',
        title: 'Passo-a-passo',
        content: 'Sempre que quiser ver este passo-a-passo, clique neste botão.',
        backdrop: true,
        onNext: function() {
          endTour.end();
          $('[href="#dados-gerais"]').click();
        },
      },
      {

      }
    ]});

    $('.start-tour').click(function(){
        $('[href="#dados-gerais"]').click();
        setTimeout(function(){
            tour.restart();
        },500);
    });

    $('.end-tour').click(function(){
        endTour.restart();
    });

});

function getTourElement(tour){
   return tour._options.steps[tour._current].element
}