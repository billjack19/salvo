var tour,endTour;
$(document).ready(function() {
    tour = new Tour({
      onEnd: function() {
        endTour.restart();
      },
      steps: [
      {
        placement: 'right',
        element: '#botao-adicionar',
        title: 'Adicionar produto',
        content: 'Neste botão poderá cadastrar um novo Produto.',
        backdrop: true,
      },
      {
        placement: 'right',
        element: '#imprimir-etiqueta',
        title: 'Imprimir etiquetas',
        content: 'Neste botão poderá gerar etiquetas dos seus produtos cadastrados.',
        backdrop: true,
      },
      {
        placement: 'right',
        element: '#botao-mais-acoes',
        title: 'Importar produtos',
        content: 'Neste botão poderá importar seus produtos utilizando uma planilha de excel ou notas fiscais de vendas, exportar os produtos em planilhas e ajustar os valores em massa.',
        backdrop: true,
      },
      /*{
        placement: 'right',
        element: '#botao-exportar',
        title: 'Exportar produtos',
        content: 'Neste botão poderá exportar os cadastros em formato de excel.',
        backdrop: true,
      },*/
      {
        placement: 'left',
        element: '#ProdutoBusca',
        title: 'Filtro',
        content: 'Aqui você pode pesquisar o produto por alguma parte do nome ou código.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.botao-busca-avancada',
        title: 'Busca avançada',
        content: 'Aqui você encontra funções mais avançadas para buscar o produto como, grupo código do produto e situação em estoque.',
        backdrop: true,
        onShown: function(tour) {
          var stepElement = getTourElement(tour);
          $(stepElement).after($('.tour-step-background'));
          $(stepElement).after($('.tour-backdrop'));
        },
        onNext: function() {
            if(!$('.index .btn-info:first').length){
                assistirVideoTutorial();
            }
        },
      },
      {
        placement: 'top',
        element: '.index tbody tr:first',
        title: 'Resumo do produto',
        content: 'Aqui você visualiza um resumo do produto.',
        backdrop: true,
      },
      /*{
        placement: 'left',
        element: '.index .btn-primary:first',
        title: 'Estoque',
        content: 'Neste botão poderá visualizar as movimentações de estoque do produto.',
        backdrop: true,
      },*/
      {
        placement: 'left',
        element: '.index .btn-info:first',
        title: 'Visualizar produto',
        content: 'Neste botão poderá visualizar os detalhes do produto.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.index .btn-warning:first',
        title: 'Editar produto',
        content: 'Neste botão poderá atualizar os dados do produto.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.index .btn-danger:first',
        title: 'Deletar produto',
        content: 'Neste botão poderá excluir o produto.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.index .btn-success:first',
        title: 'Mais ações',
        content: 'Neste botão poderá realizar mais ações como visualizar as movimentações de estoque e clonar o produto.',
        backdrop: true,
        onNext: function() {
            if($('.index .btn-info:first').length){
                if(exibirVideo){
                    assistirVideoTutorial();
                }else{
                    tour.end();
                    endTour.restart();
                    exibirVideo = true;
                }
            }
        },
      },
      {

      }
    ]});

    endTour = new Tour({
      steps: [
      {
        placement: 'left',
        element: '#start-tour',
        title: 'Passo-a-passo',
        content: 'Sempre que quiser ver este passo-a-passo, clique neste botão.',
        backdrop: true,
        onNext: function() {
          endTour.end();
        },
      },
      {

      }
    ]});

    $('.start-tour').click(function(){
        tour.restart();
    });

    $('.end-tour').click(function(){
        endTour.restart();
    });
});

function getTourElement(tour){
   return tour._options.steps[tour._current].element
}