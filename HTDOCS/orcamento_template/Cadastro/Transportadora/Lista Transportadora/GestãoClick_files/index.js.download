var tour,endTour;
$(document).ready(function() {
    tour = new Tour({
      onEnd: function() {
        endTour.restart();
      },
      steps: [
      {
        placement: 'right',
        element: '#botao-adicionar',
        title: 'Adicionar transportadora',
        content: 'Neste botão poderá cadastrar uma nova Transportadora.',
        backdrop: true,
      },
      {
        placement: 'right',
        element: '#botao-exportar',
        title: 'Exportar transportadoras',
        content: 'Neste botão poderá exportar as transportadoras cadastradas em formato xls.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '#TransportadoraNome',
        title: 'Filtro',
        content: 'Aqui você pode pesquisar as transportadoras por alguma parte do nome.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.botao-busca-avancada',
        title: 'Busca avançada',
        content: 'Aqui você encontra funções mais avançadas para buscar a transportadora como, tipo, nome, email e telefone.',
        backdrop: true,
        onShown: function(tour) {
          var stepElement = getTourElement(tour);
          $(stepElement).after($('.tour-step-background'));
          $(stepElement).after($('.tour-backdrop'));
        },
        onNext: function() {
          if(!$('.index .btn-info:first').length){
              tour.end();
              endTour.restart();
          }
        },
      },
      {
        placement: 'top',
        element: '.index tbody tr:first',
        title: 'Resumo da transportadora',
        content: 'Aqui você visualiza um resumo da transportadora.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.index .btn-info:first',
        title: 'Visualizar transportadora',
        content: 'Neste botão poderá visualizar os detalhes da transportadora.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.index .btn-warning:first',
        title: 'Editar transportadora',
        content: 'Neste botão poderá atualizar os dados da transportadora.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.index .btn-danger:first',
        title: 'Deletar transportadora',
        content: 'Neste botão poderá excluir a transportadora.',
        backdrop: true,
        onNext: function() {
            if($('.index .btn-info:first').length){
                tour.end();
                endTour.restart();
            }
        },
      },
      {

      }
    ]});

    endTour = new Tour({
      steps: [
      {
        placement: 'left',
        element: '#start-tour',
        title: 'Passo-a-passo',
        content: 'Sempre que quiser ver este passo-a-passo, clique neste botão.',
        backdrop: true,
        onNext: function() {
          endTour.end();
        },
      },
      {

      }
    ]});

    $('.start-tour').click(function(){
        tour.restart();
    });

    $('.end-tour').click(function(){
        endTour.restart();
    });
});

function getTourElement(tour){
   return tour._options.steps[tour._current].element
}