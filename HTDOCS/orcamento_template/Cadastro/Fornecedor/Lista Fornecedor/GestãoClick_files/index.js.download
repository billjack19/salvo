var tour,endTour;
$(document).ready(function() {
    tour = new Tour({
      onEnd: function() {
        endTour.restart();
      },
      steps: [
      {
        placement: 'right',
        element: '#botao-adicionar',
        title: 'Adicionar fornecedor',
        content: 'Neste botão poderá cadastrar um novo Fornecedor.',
        backdrop: true,
      },
      {
        placement: 'right',
        element: '#botao-importar',
        title: 'Importar fornecedores',
        content: 'Neste botão poderá importar seus fornecedores utilizando uma planilha de excel.',
        backdrop: true,
      },
      {
        placement: 'right',
        element: '#botao-exportar',
        title: 'Exportar fornecedores',
        content: 'Neste botão poderá exportar cadastros em formato de excel.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '#FornecedorNome',
        title: 'Filtro',
        content: 'Aqui você pode pesquisar os fornecedores por alguma parte do nome.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.botao-busca-avancada',
        title: 'Busca avançada',
        content: 'Aqui você encontra funções mais avançadas para buscar o fornecedor como, tipo, nome, email e telefone.',
        backdrop: true,
        onShown: function(tour) {
          var stepElement = getTourElement(tour);
          $(stepElement).after($('.tour-step-background'));
          $(stepElement).after($('.tour-backdrop'));
        },
        onNext: function() {
          if(!$('.index .btn-info:first').length){
              assistirVideoTutorial();
          }
        },
      },
      {
        placement: 'top',
        element: '.index tbody tr:first',
        title: 'Resumo do fornecedor',
        content: 'Aqui você visualiza um resumo do fornecedor.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.index .btn-info:first',
        title: 'Visualizar fornecedor',
        content: 'Neste botão poderá visualizar os detalhes do fornecedor.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.index .btn-warning:first',
        title: 'Editar fornecedor',
        content: 'Neste botão poderá atualizar os dados do fornecedor.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.index .btn-danger:first',
        title: 'Deletar fornecedor',
        content: 'Neste botão poderá excluir o fornecedor.',
        backdrop: true,
        onNext: function() {
            if($('.index .btn-info:first').length){
               if(exibirVideo){
                    assistirVideoTutorial();
                }else{
                    tour.end();
                    endTour.restart();
                    exibirVideo = true;
                }
            }
        },
      },
      {

      }
    ]});

    endTour = new Tour({
      steps: [
      {
        placement: 'left',
        element: '#start-tour',
        title: 'Passo-a-passo',
        content: 'Sempre que quiser ver este passo-a-passo, clique neste botão.',
        backdrop: true,
        onNext: function() {
          endTour.end();
        },
      },
      {

      }
    ]});

    $('.start-tour').click(function(){
        tour.restart();
    });

    $('.end-tour').click(function(){
        endTour.restart();
    });
});

function getTourElement(tour){
   return tour._options.steps[tour._current].element
}