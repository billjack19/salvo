var tour,endTour;
$(document).ready(function() {
    tour = new Tour({
      onEnd: function() {
        endTour.restart();
      },
      steps: [
      {
        placement: 'right',
        element: '#botao-adicionar',
        title: 'Adicionar venda',
        content: 'Neste botão poderá cadastrar uma nova venda.',
        backdrop: true,
      },
      {
        placement: 'right',
        element: '#botao-acoes-massa',
        title: 'Mais ações',
        content: 'Neste botão poderá exportar os cadastros em formato de excel e agrupar vendas.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.botao-busca-avancada',
        title: 'Busca avançada',
        content: 'Aqui você encontra funções para filtrar as vendas por cliente, data e situação.',
        backdrop: true,
        onShown: function(tour) {
          var stepElement = getTourElement(tour);
          $(stepElement).after($('.tour-step-background'));
          $(stepElement).after($('.tour-backdrop'));
        },
        onNext: function() {
            if(!$('.index .btn-info:first').length){
                assistirVideoTutorial();
            }
        },
      },
      {
        placement: 'top',
        element: '.index tbody tr:first',
        title: 'Resumo da venda',
        content: 'Aqui você visualiza um resumo da venda.',
        backdrop: true,
      },
      {
        placement: 'bottom',
        element: '.index tbody span.label:first',
        title: 'Situação',
        content: 'Aqui você pode alterar a situação da venda. <br> <b>Importante: </b>Para atualizar o estoque dos produtos e lançar a venda ao financeiro, é necessário que a venda esteja <b>Confirmada</b>.',
        backdrop: true,
      },

      {
        placement: 'left',
        element: '.index .btn-info:first',
        title: 'Visualizar venda',
        content: 'Neste botão poderá visualizar os detalhes da venda.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.index .btn-warning:first',
        title: 'Editar venda',
        content: 'Neste botão poderá atualizar os dados da venda.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.index .btn-danger:first',
        title: 'Deletar venda',
        content: 'Neste botão poderá excluir a venda.',
        backdrop: true,
      },
      {
        placement: 'left',
        element: '.index .btn-success:first',
        title: 'Mais ações',
        content: 'Neste botão poderá realizar mais ações como Alterar situação, Imprimir PDF, Emitir nota fiscal, Copiar venda e Enviar por e-mail.',
        backdrop: true,
        onNext: function() {
            if($('.index .btn-info:first').length){
                if(exibirVideo){
                    assistirVideoTutorial();
                }else{
                    tour.end();
                    endTour.restart();
                    exibirVideo = true;
                }
            }
        },
      },
      {

      }
    ]});

    endTour = new Tour({
      steps: [
      {
        placement: 'left',
        element: '#start-tour',
        title: 'Passo-a-passo',
        content: 'Sempre que quiser ver este passo-a-passo, clique neste botão.',
        backdrop: true,
        onNext: function() {
          endTour.end();
        },
      },
      {

      }
    ]});

    $('.start-tour').click(function(){
        tour.restart();
    });

    $('.end-tour').click(function(){
        endTour.restart();
    });
});

function getTourElement(tour){
   return tour._options.steps[tour._current].element
}